/* pages/recommend/recommend.wxss */

page {
  background: #fff;
}

.list {
  height: 130rpx;
  width: 100%;
  border-bottom: 2rpx solid #eaeaea;
  display: flex;
  align-items: center;
}

.list image {
  height: 86rpx;
  width: 86rpx;
  border-radius: 50%;
  margin: 0 35rpx;
}

.list view {
  display: flex;
  flex-direction: column;
}

.list view text:nth-child(1) {
  font: 30rpx '';
  color: #333;
}

.list view text:nth-child(2) {
  font: 20rpx '';
  color: #999;
  margin-top: 14rpx;
}
