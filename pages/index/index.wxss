/**index.wxss**/

page {
  background: #f6f6f6;
}

.swiper {
  position: relative;
  display: flex;
  justify-content: center;
}

.swiper .ipt {
  position: absolute;
  top: 30rpx;
}

.swiper .ipt input {
  height: 54rpx;
  width: 510rpx;
  border-radius: 27rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
  text-align: center;
  font: 25rpx/54rpx '';
  position: relative;
}

.swiper .ipt .sea {
  position: absolute;
  top: 12rpx;
  left: 87rpx;
}

/* 宫格 */

.grid {
  height: 207rpx;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.grid .grid_box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid .grid_box image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 20rpx;
  background: pink;
}

.grid .grid_box text {
  font: 25rpx '';
  color: #666;
  margin-top: 21rpx;
}

.hot {
  height: 412rpx;
  padding: 0 34rpx;
  margin: 9rpx 0;
  box-sizing: border-box;
  background: #fff;
}

.hot .head {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
}

.hot .head .title {
  font: 28rpx/80rpx '';
  color: #333;
}

.hot .head .title:nth-child(2) {
  color: #999;
  font-size: 20rpx;
}

.info {
  display: flex;
  justify-content: space-around;
}

.info .info_list {
  width: 216rpx;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.info .info_list .pic {
  height: 160rpx;
  width: 216rpx;
  border-radius: 10rpx;
}

.info .info_list .title {
  font: 28rpx/40rpx '';
  color: #333;
  margin: 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info .info_list .bottom {
  display: flex;
  justify-content: space-between;
}

.info .info_list .bottom .price {
  font-weight: bold;
  font: 24rpx '';
  color: #f04848;
}

.look {
  display: flex;
 align-items: center
}

.look .icon {
  height: 18rpx;
  width: 24rpx;
  margin-right:11rpx;
}

.look text {
  font: 22rpx '';
  color: #999;
  margin-right:11rpx;
}

.tea {
  height: 304rpx;
}

.famous {
  display: flex;
}

.famous image {
  height: 192rpx;
  width: 249rpx;
  border-radius: 10rpx;
}

.famous .right {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.famous .right .title {
  font: 600 30rpx '';
  margin-top: 17rpx;
  color: #333;
}

.famous .right .name {
  font: 24rpx '';
  color: #f18636;
  margin: 29rpx 0 57rpx 0;
}
