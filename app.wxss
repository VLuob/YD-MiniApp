/**app.wxss**/

/* 页面背景色 */

page {
  background: #f6f6f6;
}

/*轮播控件*/

.home-swiper {
  width: 100%;
  height: 350rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 底部购买  */

.purchase {
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
}

.purchase .left {
  width: 298rpx;
  display: flex;
  justify-content: space-around;
  background: #161f24;
  color: #fff;
}

.purchase .left view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.purchase .left image {
  height: 28rpx;
  width: 28rpx;
  margin-bottom: 11rpx;
}

.purchase .right {
  width: 452rpx;
  background: #ff8c01;
  color: #fff;
  font: 30rpx/98rpx '';
  text-align: center;
}

/* 选项卡 start */

.swiper-tab {
  width: 100%;
  height: 100rpx;
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  border-bottom: 2rpx solid #eaeaea;
}

.swiper-tab-item {
  width: 30%;
  font: 30rpx/100rpx '';
  color: #333;
}

.active {
  color: #f18636;
  border-bottom: 5rpx solid #f18636;
}

/* 选项卡 end */
